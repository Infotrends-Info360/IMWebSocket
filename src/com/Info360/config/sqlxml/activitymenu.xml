<select id="Flag_activitymenu" parameterType="com.Info360.bean.Activitymenu"  resultMap="activitymenuResult">
 Select DBID,MENUNAME,DELETEFLAG,DELETEDATETIME,CREATEDATETIME,SORT from tblCfg_ActivityMenu
 <if test="deleteflag != null &amp;&amp; deleteflag!=&quot;&quot; &amp;&amp; deleteflag.equals(&quot;0&quot;)">
 	where deleteflag=#{deleteflag} 
 </if>
  <if test="deleteflag != null &amp;&amp; deleteflag!=&quot;&quot; &amp;&amp; deleteflag.equals(&quot;1&quot;)">
 	where deleteflag=#{deleteflag} 
 </if>
 ORDER BY SORT
</select>



<insert id="Insert_activitymenu" parameterType="com.Info360.bean.Activitymenu">
insert into tblCfg_ActivityMenu 
(MENUNAME,DELETEFLAG,CREATEDATETIME,SORT) 
values
(#{menuname},#{deleteflag},#{createdatetime},(Select top 1 SORT from tblCfg_ActivityMenu order by dbid desc)+1)
</insert>

<update id="Update_activitymenu" parameterType="com.Info360.bean.Activitymenu">
update  tblCfg_ActivityMenu 
set 
	MENUNAME=#{menuname}

where DBID=#{dbid}
</update>
<update id="LogicDelete_activitymenu" parameterType="com.Info360.bean.Activitymenu">
update  tblCfg_ActivityMenu set deleteflag=#{deleteflag},deletedatetime=#{deletedatetime} 
where menuname=#{menuname} 
or dbid=#{dbid} 
	<if test="ActivityMenu_DBID_list.size() > 0">
 		<foreach item="value" index="key" collection="ActivityMenu_DBID_list"
			open="or" separator="or" close="">
 	 		dbid=#{value}
		</foreach>
	</if>
</update>

<update id="AMenu_Sort" parameterType="com.Info360.bean.Activitymenu">
update  tblCfg_ActivityMenu set SORT=#{sort}
<if test="ActivityMenu_SORT_list.size() > 0">
 		<foreach item="value" index="key" collection="ActivityMenu_SORT_list"
			open="," separator="," close="">
 	 		sort=#{value}
		</foreach>
	</if>
where dbid=#{dbid} 
	<if test="ActivityMenu_DBID_list.size() > 0">
 		<foreach item="value" index="key" collection="ActivityMenu_DBID_list"
			open="or" separator="or" close="">
 	 		dbid=#{value}
		</foreach>
	</if>
</update>


<select id="Query_AMenu_Sort" parameterType="com.Info360.bean.Activitymenu"  resultMap="activitymenuResult">
 Select DBID,SORT from tblCfg_ActivityMenu
where sort=#{sort}
<if test="ActivityMenu_SORT_list.size() > 0">
 		<foreach item="value" index="key" collection="ActivityMenu_SORT_list"
			open="or" separator="or" close="">
 	 		sort=#{value}
		</foreach>
	</if>
</select>

<select id="Query_AMenu_DBID" parameterType="com.Info360.bean.Activitymenu"  resultMap="activitymenuResult">
 Select DBID,SORT from tblCfg_ActivityMenu
where dbid=#{dbid}
<if test="ActivityMenu_DBID_list.size() > 0">
 		<foreach item="value" index="key" collection="ActivityMenu_DBID_list"
			open="or" separator="or" close="">
 	 		dbid=#{value}
		</foreach>
	</if>
</select>

